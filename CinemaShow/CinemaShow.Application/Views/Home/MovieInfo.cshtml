@model Movie
@{
    ViewBag.Title = $"{Model.Title} Info";
    var description = Model.Description.Split(new string[] { Environment.NewLine }, StringSplitOptions.None);
}

<h2 class="text-center">@Model.Title</h2>
<hr />
<div class="row">
    <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6 col-md-push-1">
        <img id="img-poster" src="@Model.Image.Url.Substring(Model.Image.Url.IndexOf("/public"))" class="img-responsive" style="max-height: 304px;" alt="Image Poster" />
    </div>
    <div id="iframe-panel" class="col-xs-6 col-sm-6 col-md-6 col-lg-6 col-md-pull-2">
        <div class="embed-responsive embed-responsive-16by9">
            <iframe class="embed-responsive-item" src='@($"https://www.youtube.com/embed/{Model.YoutubeUrl}?rel=0")' allowfullscreen></iframe>
        </div>
    </div>
</div>
<hr />
<div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
        <p class="text-center text-bold">@string.Join(", ", Model.Categories.Select(c => c.Name).OrderBy(x => x))</p>
        @foreach (var line in description)
        {
            <p>@line</p>
        }
    </div>
</div>
<div class="col-xs-1 col-sm-1 col-md-1 col-lg-1 col-xs-push-11 col-sm-push-11 col-md-push-11 col-lg-push-11">
    <a href="/" role="button" class="btn btn-default">Back</a>
</div>
<script type="text/javascript" src="/resources/scripts/posterSizeHandler.js"></script>